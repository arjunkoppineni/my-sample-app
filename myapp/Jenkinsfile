pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS_ID = 'docker-cred'  // Create this in Jenkins > Manage Credentials
        IMAGE_NAME = 'harishkoppineni/my-sample-app'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/arjunkoppineni/my-sample-app.git'
            }
        }

        stage('Build Application') {
            steps {
                dir('backend') {
                    sh 'npm install'
                    sh 'npm test || echo No tests found'  // Optional testing
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('backend') {
                    script {
                        dockerImage = docker.build("${IMAGE_NAME}:latest")
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS_ID) {
                        dockerImage.push("latest")
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                dir('kubernetes') {
                    sh 'kubectl apply -f deployment.yaml'
                    sh 'kubectl apply -f service.yaml'
                }
            }
        }
    }
}
